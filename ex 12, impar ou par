programa
{
    funcao inicio()
    {
        inteiro numero
        caracter continuar = 's'
        
        escreva("=== SISTEMA PAR OU ÍMPAR ===\n")
        
        enquanto (continuar == 's' ou continuar == 'S')
        {
            escreva("\nDigite um número inteiro: ")
            leia(numero)
            
            verificar_par_impar(numero)
            
            escreva("\n\nDeseja verificar outro número? (s/n): ")
            leia(continuar)
        }
        
        escreva("\nObrigado por usar o sistema!")
    }
    
    funcao verificar_par_impar(inteiro num)
    {
        // Verifica se o número é par ou ímpar usando o operador módulo (%)
        se (num % 2 == 0)
        {
            escreva("\n✓ O número ", num, " é PAR!")
        }
        senao
        {
            escreva("\n✓ O número ", num, " é ÍMPAR!")
        }
        
        // Explicação adicional
        escreva("\n\nExplicação:")
        escreva("\nResto da divisão por 2: ", num % 2)
        se (num % 2 == 0)
        {
            escreva("\nComo o resto é 0, o número é par.")
        }
        senao
        {
            escreva("\nComo o resto é 1, o número é ímpar.")
        }
    }
}
